<%= form_for([@article, @article.comments.build]) do |f| %>
  <div>
    <%= f.label :commenter, "Enter username" %><br>
    <%= f.text_field :commenter, size:"50x10" %>
  </div>
  <div>
    <%= f.label :body, "Write a comment..." %><br>
    <%= f.text_area :body, size:"100x10" %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
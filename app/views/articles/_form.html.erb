<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <span class="errors">
          <%= pluralize(@article.errors.count, "error") %>
        </span> prohibited this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li class="errors"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<section class="new-article-form">
  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title, size:"50x2" %>
  </p>
  <p>
      <%= f.label :picture, "Attach Cover Photo:" %>
      <%= f.file_field :picture %>
  </p>
  <p>
    <%= f.label :intro %><br>
    <%= f.text_area :intro, size:"200x10" %>

   <p>
    <%= f.label :need_to_know, "NEED TO KNOW" %><br>
    <%= f.text_area :need_to_know, size:"200x10" %>
  </p>
  <p>
    <%= f.label :recap, "IN CASE YOU MISSED IT" %><br>
    <%= f.text_area :recap, size:"200x10" %>
  </p>
  <p>
    <%= f.label :hot_and_cold, "WHO's HOT? WHO's COLD?" %><br>
    <%= f.text_area :hot_and_cold, size:"200x10" %>
  </p>
  <p>
    <%= f.label :opp_lineup, "OPPONENT PROJECTED LINEUP" %><br>
    <%= f.text_area :opp_lineup, size:"200x10" %>
  </p>
  <p>
    <%= f.label :sharks_lineup, "SHARKS PROJECTED LINEUP" %><br>
    <%= f.text_area :sharks_lineup, size:"200x10" %>
  </p>
  <p>
    <%= f.label :further_reading, "FUTHER READING FROM AROUND THE WEB" %><br>
    <%= f.text_area :further_reading, size:"200x10" %>
  </p>
  <p>
    <%= f.label :memorable_moments, "MEMORABLE MOMENTS" %><br>
    <%= f.text_area :memorable_moments, size:"200x10" %>
  </p>
  <p>
    <%= f.label :share, "SHARE & SUBSCRIBE" %><br>
    <%= f.text_area :share, size:"200x10" %>
  </p>


  <p>
    <%= f.submit %>
  </p>
</section>
<% end %>
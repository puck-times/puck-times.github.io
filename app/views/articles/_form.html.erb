<%= form_for (@article, multipart: true)do |f| %>

  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <span class="errors">
          <%= pluralize(@article.errors.count, "error") %>
        </span> prohibited this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li class="errors"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<section class="new-article-form">
  <div>
    <%= f.submit 'Create or Update Article', :class=>"button" %>
  </div>
  <p>
    <%= f.label :title, "Title", :class=>"edit-label" %><br>
    <%= f.text_area :title, size:"50x2" %> <br>
    <%= f.date_field :game_date %>
  </p>

  <p>
    <%= f.label :intro, "Intro", :class=>"edit-label"  %><br>
    <%= f.text_area :intro, size:"200x6" %>

   <p>
    <%= f.label :need_to_know, "Need to Know", :class=>"edit-label"  %><br>
    <%= f.text_area :need_to_know, size:"200x6" %>
    <%= f.label :need_to_know, "Attach photo (optional)", :class=>"attach-photo"  %><br>
    <%= f.file_field :photo  %>

  </p>
  <p>
    <%= f.label :recap, "In Case You Missed It (Game Recap)", :class=>"edit-label"  %><br>
    <%= f.text_area :recap, size:"200x6" %>

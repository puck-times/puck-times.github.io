<section class="main-section">
<h1>Archives - The Puck Times <br> <br>  </h1>

  <% @articles.each do |article| %>
    <div class="main-body col-12">
      <div class="title col-9 fl-l"> <h2> <%= article.title %></h2> </div>
      <div class="col-1 fl-r"> <%= link_to 'Show', article_path(article) %></div>
      <div class="col-1 fl-r"><%= link_to 'Edit', edit_article_path(article) %></div>
      <div class="col-1 fl-r"><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></div>
      <p class="col-12 cl-b"><%= article.intro %></p>
      <hr>
    </div>
  <% end %>

</section>